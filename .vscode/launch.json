{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Express",
        "runtimeExecutable": "nodemon",
        "runtimeArgs": ["--exec", "babel-node --require dotenv/config"],
        "args": ["./dist/app.js"],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  